<!--プロフィールに表示されているユーザー=user ブックマークする投稿＝post-->
<% if post.bookmarked_by?(current_user) %>
  <%= link_to post_bookmarks_path(post, user_id: user.id), method: :delete, remote: true, class: 'position-relative post-box-link__profile' do %>
    <i class="fa-solid fa-bookmark"></i>
  <% end %>
<% else %>
  <%= link_to post_bookmarks_path(post, user_id: user.id), method: :post, remote: true, class: 'position-relative post-box-link__profile' do %>
    <i class="fa-regular fa-bookmark"></i>
  <% end %>
<% end %>