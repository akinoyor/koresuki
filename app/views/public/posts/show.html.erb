<div class = "containar">
  <div class = "row">

    <%= render "profile",profile_user: @user, newpost: @newpost %>

    <div class = "col-9 m-3">

       <div class = "row m-3">

        <div class ="position-relative card shadow-sm" style = "width:100%" >
          <div class = "row m-3">
            <div class = "col-1">
            <%= link_to user_page_path(@post.user_id), class: 'position-relative' do %>
            <%= image_tag @post.user.get_user_image(50,50) %>
            <% end %>
            </div>

            <div class = "col-11">
              <div class = "row">
                <div class = "col-8">
                <%= link_to user_page_path(@post.user_id), class: 'position-relative' do %>
                <%= @post.user.name %>
                <% end %>
                </div>
                <div class ="col-3">
                <% if user_signed_in? %>
                  <% if current_user != @post.user %>
                    <% if current_user.following?(@post.user) %>
                      <%= link_to "フォロー外す", user_follows_path(@post.user.id), method: :delete,class: 'position-relative btn btn-info' %>
                    <% else %>
                      <%= link_to "フォローする", user_follows_path(@post.user.id), method: :post, class: 'position-relative btn btn-success' %>
                    <% end %>
                  <% end %>
                <% end %>

                </div>
              </div>

              <div class = "row m-3">
              <%= @post.body %>
              </div>

              <div>
              <% if @post.post_image.attached? %>
              <%= image_tag @post.post_image, width:'80%' %>
              <% end %>
              </div>
            </div>
          </div>

          <div class = "row m-3">
            <div class = "offset-1 col-1">
              <i class="fa-regular fa-comment"></i> <%= @post.comments.count(:post_id) %>
            </div>

            <div class = "offset-1 col-1">
              <i class="fa-regular fa-bookmark position-relative"></i>
            </div>

            <div class = "col-4">
              <p>投稿日時: <%= @post.created_at %></p>
                <% if @post.created_at != @post.updated_at %>
              <p>更新日時 : <%= @post.updated_at %></p>
              <% end %>
            </div>

            <% if current_user == @post.user %>
            <div class = "col-2">
              <%= link_to "削除", post_path(@post.id), method: :delete,class: 'position-relative btn btn-danger', data: {confirm: "削除しますか？"} %>
              <%= link_to "変更", edit_post_path(@post.id),class: 'position-relative btn btn-info' %>
            </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>