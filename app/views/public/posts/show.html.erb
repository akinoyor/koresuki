<div class = "containar">
  <div class = "row">

    <div class = "col-2">
    <%= render "profile",profile_user: @user, newpost: @newpost %>
    </div>

    <div class = "col-9 m-3">

       <div class = "row mx-3 mt-3">

        <div class ="position-relative card shadow-sm" style = "width:100%" >
          <div class = "row m-3">
            <div class = "col-1">
            <%= link_to user_path(@post.user_id), class: 'position-relative' do %>
            <%= image_tag @post.user.get_user_image(100,100) %>
            <% end %>
            </div>

            <div class = "col-11">
              <div class = "row">
                <div class = "col-8">
                <%= link_to user_path(@post.user_id), class: 'position-relative' do %>
                <%= @post.user.name %>
                <% end %>
                </div>
                <div class ="col-3">
                <% if user_signed_in? %>
                  <% if current_user != @post.user %>
                    <% if current_user.following?(@post.user) %>
                      <%= link_to "フォロー外す", user_follows_path(@post.user.id), method: :delete,class: 'position-relative btn btn-info' %>
                    <% else %>
                      <%= link_to "フォローする", user_follows_path(@post.user.id), method: :post, class: 'position-relative btn btn-success' %>
                    <% end %>
                  <% end %>
                <% end %>

                </div>
              </div>

              <div class = "row m-3">
              <%= @post.body %>
              </div>

              <div>
              <% if @post.post_image.attached? %>
              <%= image_tag @post.post_image, width:'80%' %>
              <% end %>
              </div>
            </div>
          </div>

          <div class = "row m-3">
            <div class = "offset-1 col-1">
              <i class="fa-regular fa-comment"></i> <%= @post.comments.count(:post_id) %>
            </div>

            <div class = "offset-1 col-1">
              <i class="fa-regular fa-bookmark position-relative"></i>
            </div>

            <div class = "col-4">
              <p>投稿日時: <%= @post.created_at %></p>
                <% if @post.created_at != @post.updated_at %>
              <p>更新日時 : <%= @post.updated_at %></p>
              <% end %>
            </div>

            <% if current_user == @post.user %>
            <div class = "col-2">
              <%= link_to "削除", post_path(@post.id), method: :delete,class: 'position-relative btn btn-danger', data: {confirm: "削除しますか？"} %>
              <%= link_to "変更", edit_post_path(@post.id),class: 'position-relative btn btn-info' %>
            </div>
            <% end %>

          </div>
        </div>
      </div>


<!--ここからコメント投稿欄-->
      <div class = "row mx-3">
        <div class ="position-relative card shadow-sm mb-3" style = "width:100%" >
          <div class = "row m-3">
            <div class = "col-2 p-3">
            <%= link_to user_path(@user.id), class: 'position-relative' do %>
            <%= image_tag @user.get_user_image(100,100) %>
            <% end %>
            </div>

            <div class = "col-10 p-3">
            <%= form_with model: [@post, @newcomment] do |f| %>
            <%= f.text_area :body, rows: '5', placeholder: "コメントをここに記入", cols:'100%' %>
            <%= f.file_field :comment_image, accept: "image/*", class: "w-100" %>
              <div class = "text-center mt-2">
              <%= f.submit "送信する" %>
              </div>
            <% end %>
            </div>
          </div>
        </div>

<!--ここからコメント欄-->
        <% @post.comments.each do |post_comment| %>
        <div class ="position-relative card shadow-sm" style = "width:100%" >
          <div class = "row m-3">
            <!--コメント詳細URLに差し替えること-->
             <%= link_to '', post_comment_path(post_comment.id), class: 'position-absolute post-box-link' %>
            <div class = "col-2 p-3">
            <%= link_to user_path(post_comment.user_id), class: 'position-relative post-box-link__profile' do %>
            <%= image_tag post_comment.user.get_user_image(100,100) %>
            <% end %>
            </div>
            <div class = "col-10">
              <div class = "row">
                <div class = "col-8">
                <%= link_to user_path(post_comment.user_id), class: 'position-relative post-box-link__profile' do %>
                <%= post_comment.user.name %>
                <% end %>
                </div>
                <div class ="col-3">
                <% if user_signed_in? %>
                  <% if current_user != post_comment.user %>
                    <% if current_user.following?(post_comment.user) %>
                      <%= link_to "フォロー外す", user_follows_path(post_comment.user.id), method: :delete,class: 'position-relative post-box-link__profile btn btn-info' %>
                    <% else %>
                      <%= link_to "フォローする", user_follows_path(post_comment.user.id), method: :post, class: 'position-relative post-box-link__profile btn btn-success' %>
                    <% end %>
                  <% end %>
                <% end %>

                </div>
              </div>

              <div class = "row">
              <%= post_comment.body %>
              </div>
              <div>
              <% if post_comment.comment_image.attached? %>
              <%= image_tag post_comment.comment_image, width:'40%' %>
              <% end %>
              </div>

              <div class = "row m-3">
                <div class = "offset-1 col-1">
                </div>
                <div class = "offset-2 col-4">
                  <p>投稿日時: <%= post_comment.created_at %></p>
                  <% if post_comment.created_at != post_comment.updated_at %>
                  <p>更新日時 : <%= post_comment.updated_at %></p>
                  <% end %>
                </div>


                <% if current_user == post_comment.user %>
                <div class = "col-2">
                <%= link_to "削除", post_comment_path(post_comment.id), method: :delete,class: 'position-relative post-box-link__profile btn btn-danger', data: {confirm: "削除しますか？"} %>

                </div>
                <% end %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>