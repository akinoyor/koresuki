<div class="containar">
  <div class="row">
    <div class="xl-off col-lg-3">
      <%= render "public/posts/profile", profile_user: @user, newpost: @newpost %>
    </div>

    <div class="col-12 col-lg-9">
      <%= link_to "<<戻る", 'javascript:history.back()' %>
      <%= render "public/posts/post_show", post_show: @comment %>
<!--ここからコメント投稿欄-->
      <div id="comment_new">
        <%= render "comment_new", newcomment: @newcomment, user: @user, parent_post: @comment, origin_post_id: @comment.post_id %>
      </div>
<!--ここからコメント欄-->
      <div id="comments_index">
        <%= render "comments_index", view_comments: @comment.child_comments %>
      </div>
      </div>
    </div>
  </div>
</div>